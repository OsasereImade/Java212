//        }
//    }
      
    public static String [] Textfileinput(String filename) {
        String [] wordArray = new String [1000];
        int length = 0;
        TextFileInput in = new TextFileInput(filename);
        String line = in.readLine();
        //length = 0;
        while(line != null) {
            for(int i = 0; i < line.length(); i++) {
            char lowerCaseVowels = line.charAt(i);
            char upperCaseVowels = line.charAt(i);
            if(lowerCaseVowels == 'a' || upperCaseVowels == 'A' || lowerCaseVowels == 'e'
                    || upperCaseVowels == 'E' || lowerCaseVowels == 'i' || upperCaseVowels == 'I' ||
                    lowerCaseVowels == 'o' || upperCaseVowels == '0' || lowerCaseVowels == 'u' ||
                    upperCaseVowels == 'U');
            wordArray[length] = line;
            length++;
            line = in.readLine();
          }  //for loop
            
        } //while loop
        in.close();
        return wordArray;
    }
}
